(define defineHtmlTag (macros (tag)
	(list `define tag
		(list `lambda `x
			(list
				`str-concat
				(str-concat "\n<" (symbol-name tag) ">")
				`(str-replace (str-concat "\n" (eval ( cons `str-concat x )) ) "\n" "\n  ")
				(str-concat "\n</" (symbol-name tag) ">")
			)
		)
	)
))

(defineHtmlTag html)
(defineHtmlTag head)
(defineHtmlTag title)
(defineHtmlTag meta)
(defineHtmlTag body)
(defineHtmlTag div)

(define module.html html)
(define module.head head)
(define module.title title)
(define module.meta meta)
(define module.body body)
(define module.div div)

(define module.printExample (lambda ()
